pipeline {
    agent any

   triggers { pollSCM('* * * * *') }
    stages {
        
        stage('vcs') {

            steps {
                git url: 'https://github.com/Praveen-711/shopizer.git' 
                   
            }
         }
       stage('build'){
        steps{
             sh 'mvn package'
            }
          }
       }
     post {
        always {
            archiveArtifacts artifacts: '/**/*.jar'
            junit '**/surefire-reports/*.xml'}
           }
}
